                      <exclude>joda-time</exclude>
                      <exclude>jsr305</exclude>
                      <exclude>libthrift</exclude>
                      <exclude>log4j</exclude>
                      <exclude>mina-core</exclude>
                      <exclude>netty</exclude>
                      <exclude>paranamer</exclude>
                      <exclude>protobuf-java</exclude>
                      <exclude>servlet-api</exclude>
                      <exclude>snappy-java</exclude>
                      <exclude>stax-api</exclude>
                      <exclude>velocity</exclude>
                      <exclude>xz</exclude>
                      <exclude>zookeeper</exclude -->
                      <!-- end CDH5 dependency -->
                    </excludes>
                  </dependency>
                </mapping>
                <mapping>
                  <directory>${package.prefix}/flume-${project.version}/conf</directory>
                  <configuration>true</configuration>
                  <filemode>640</filemode>
                  <username>${package.username}</username>
                  <groupname>${package.groupname}</groupname>
                  <sources>
                    <source>
                      <location>src/main/resources/flume-conf</location>
                    </source>
                  </sources>
                </mapping>
                <!-- mapping>
                  <directory>/opt/dt</directory>
                  <sources>
                    <softlinkSource>
                      <destination>flume</destination>
